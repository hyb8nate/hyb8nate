# ===== Application Configuration =====
DEBUG=false
PORT=8000
ENVIRONMENT=production
LOG_LEVEL=INFO
TIMEZONE=Europe/Paris

# ===== Authentication =====
# Admin user credentials (created automatically on first start)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

# ===== Security =====
# JWT Secret (IMPORTANT: Generate a secure random key in production!)
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===== Database Configuration =====
# Database type: "sqlite" or "postgresql"
# Default: sqlite (easier setup, no external dependencies)
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
# Path to SQLite database file
SQLITE_PATH=./data/hyb8nate.db

# PostgreSQL Configuration (only needed when DB_TYPE=postgresql)
# PostgreSQL connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=hyb8nate
# DB_PASSWORD=ChangeThisSecurePassword123!
# DB_DB=hyb8nate

# ===== Snooze Options =====
FLUXCD_OPTION=false
ARGOCD_OPTION=false
